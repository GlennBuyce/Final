<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.watch.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment" />

        <argument
            android:name="list"
            app:argType="string" />

        <argument
            android:name="genre"
            app:argType="string"
            app:nullable="true"/>

        <argument
            android:name="sort"
            app:argType="string"
            app:nullable="true"/>

        <argument
            android:name="year"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.example.watch.SearchResultFragment"
        android:label="SearchResultFragment" >
        <argument
            android:name="list"
            app:argType="String"/>
        <action
            android:id="@+id/action_searchResultFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
        <argument
            android:name="list"
            app:argType="string" />

        <argument
            android:name="genre"
            app:argType="string"
            app:nullable="true"/>

        <argument
            android:name="sort"
            app:argType="string"
            app:nullable="true"/>

        <argument
            android:name="year"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="pos"
            app:argType="integer" />

    </fragment>
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.example.watch.CardFragment"
        android:label="fragment_card"
        tools:layout="@layout/fragment_card">
        <argument
            android:name="array_id"
            app:argType="integer"/>
        <argument
            android:name="pos"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.watch.FavoritesFragment"
        android:label="FavoritesFragment" >
        <action
            android:id="@+id/action_favoritesFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.watch.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/watchFragment"
        android:name="com.example.watch.WatchFragment"
        android:label="WatchFragment" >
        <action
            android:id="@+id/action_watchFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.watch.HelpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/recommendationFragment"
        android:name="com.example.watch.RecommendationFragment"
        android:label="RecommendationFragment" >
        <action
            android:id="@+id/action_recommendationFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
</navigation>